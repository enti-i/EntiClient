<Window x:Class="EntiClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:EntiClient.ViewModels"
        mc:Ignorable="d"
        Title="EntiClient"
        Width="1320"
        Height="820"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance vm:MainViewModel}">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="ConnectivityBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="18,12" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF4CC9F0" Offset="0" />
                        <GradientStop Color="#FF6C5DD3" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#33000000" BlurRadius="18" ShadowDepth="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0,0,0,16" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsOffline}" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FFF59E0B" Offset="0" />
                                <GradientStop Color="#FFEF4444" Offset="1" />
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="HeroStatLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCFFFFFF" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Style x:Key="OutlinedTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
            <Setter Property="Background" Value="#13FFFFFF" />
            <Setter Property="Padding" Value="14,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="BorderBrush" Value="#3CFFFFFF" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
                    <Setter Property="BorderThickness" Value="2" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="18" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Background" Value="#1EFFFFFF" />
            <Setter Property="BorderBrush" Value="#28FFFFFF" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <StaticResource ResourceKey="BackdropGradient" />
        </Grid.Background>

        <Rectangle Fill="{StaticResource BackdropGlow}" IsHitTestVisible="False" />
        <Ellipse Width="440"
                 Height="440"
                 Fill="#222F7BFF"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,-220,-160,0"
                 IsHitTestVisible="False"
                 Panel.ZIndex="0" />
        <Ellipse Width="380"
                 Height="380"
                 Fill="#2239D2A6"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Bottom"
                 Margin="-140,0,0,-160"
                 IsHitTestVisible="False"
                 Panel.ZIndex="0" />

        <Grid Margin="24" Panel.ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Navigation column -->
            <Border Grid.Column="0"
                    Background="{StaticResource NavigationBackgroundBrush}"
                    CornerRadius="28"
                    Padding="28"
                    Effect="{StaticResource NavigationShadow}">
                <StackPanel>
                    <TextBlock Text="EntiClient" FontSize="26" FontWeight="Bold" />
                    <TextBlock Text="Minecraft Launcher" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,4,0,24" />

                    <StackPanel.Resources>
                        <Style TargetType="Button" x:Key="NavButton">
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Padding" Value="14,10" />
                            <Setter Property="Margin" Value="0,4" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="14">
                                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28FFFFFF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Resources>

                    <Button Style="{StaticResource NavButton}" Content="Dashboard" />
                    <Button Style="{StaticResource NavButton}" Content="Presets" />
                    <Button Style="{StaticResource NavButton}" Content="Mods" />
                    <Button Style="{StaticResource NavButton}" Content="Performance" />
                    <Button Style="{StaticResource NavButton}" Content="Settings" />

                    <StackPanel Margin="0,32,0,0">
                        <TextBlock Text="Connection" FontWeight="Bold" Margin="0,0,0,8" />
                        <ToggleButton Style="{StaticResource PillToggleButton}"
                                      Content="Offline mode"
                                      IsChecked="{Binding IsOffline, Mode=TwoWay}" />
                        <TextBlock Text="{Binding ConnectionTagline}"
                                   Foreground="{StaticResource SecondaryTextBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,6,0,0" />
                    </StackPanel>

                    <StackPanel Margin="0,28,0,0">
                        <TextBlock Text="Quick actions" FontWeight="Bold" Margin="0,0,0,8" />
                        <Button Style="{StaticResource AccentButton}" Content="Launch latest" Margin="0,0,0,8" />
                        <Button Style="{StaticResource SecondaryButton}"
                                Content="Check updates"
                                IsEnabled="{Binding CanCheckUpdates}"
                                ToolTipService.ShowOnDisabled="True">
                            <Button.ToolTip>
                                <TextBlock Text="Reconnect to download the newest builds." />
                            </Button.ToolTip>
                        </Button>
                    </StackPanel>

                    <StackPanel Margin="0,28,0,0">
                        <TextBlock Text="Theme" FontWeight="Bold" Margin="0,0,0,8" />
                        <Button Style="{StaticResource SecondaryButton}" Content="Toggle theme" Click="OnToggleTheme" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Main content -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="240" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Hero -->
                <Border CornerRadius="28" Background="{StaticResource HeroBackgroundBrush}" Padding="36" Margin="0,0,0,28">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <Border Style="{StaticResource ConnectivityBadgeStyle}">
                                <StackPanel>
                                    <TextBlock Text="{Binding ConnectionStatus}" FontWeight="Bold" FontSize="16" />
                                    <TextBlock Text="{Binding ConnectionTagline}" Foreground="#F0FFFFFF" Opacity="0.85" />
                                </StackPanel>
                            </Border>
                            <TextBlock Text="Welcome back," FontSize="18" Foreground="#CCFFFFFF" />
                            <TextBlock Text="{Binding PlayerName}" FontSize="40" FontWeight="Bold" />
                            <TextBlock Text="{Binding HeroPrompt}" Margin="0,14,0,24" Foreground="#F0FFFFFF" />
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource AccentButton}" Content="{Binding LaunchButtonText}" Width="160" />
                                <Button Style="{StaticResource SecondaryButton}"
                                        Content="Manage accounts"
                                        Width="200"
                                        Margin="14,0,0,0"
                                        IsEnabled="{Binding CanManageAccounts}"
                                        ToolTipService.ShowOnDisabled="True">
                                    <Button.ToolTip>
                                        <TextBlock Text="Accounts management is unavailable offline." />
                                    </Button.ToolTip>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Column="1" Background="#1FFFFFFF" CornerRadius="22" Padding="28" Margin="24,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Session insights" FontWeight="Bold" FontSize="18" />
                                <StackPanel Orientation="Horizontal" Margin="0,18,0,0">
                                    <StackPanel Width="120">
                                        <TextBlock Text="Rank" Style="{StaticResource HeroStatLabel}" />
                                        <TextBlock Text="{Binding Rank}" FontSize="28" FontWeight="Bold" />
                                    </StackPanel>
                                    <StackPanel Margin="24,0,0,0" Width="160">
                                        <TextBlock Text="Last login" Style="{StaticResource HeroStatLabel}" />
                                        <TextBlock Text="{Binding LastLogin}" FontSize="20" FontWeight="Bold" TextWrapping="Wrap" />
                                    </StackPanel>
                                </StackPanel>
                                <Separator Margin="0,24,0,16" Opacity="0.4" />
                                <StackPanel>
                                    <TextBlock Text="Offline cache" Style="{StaticResource HeroStatLabel}" />
                                    <TextBlock Text="{Binding LastSync, StringFormat=Last synced {0}}" FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Presets -->
                <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,24">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="Launcher presets" FontSize="26" FontWeight="Bold" />
                            <TextBlock Text="Switch experiences instantly with curated setups." Foreground="{StaticResource SecondaryTextBrush}" />
                        </StackPanel>
                        <Button DockPanel.Dock="Right" Style="{StaticResource SecondaryButton}" Content="Create new" Width="140" />
                    </DockPanel>
                    <ItemsControl ItemsSource="{Binding Presets}" Margin="0,18,0,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource GlassCard}" Width="240">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Icon}" FontSize="32" />
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Margin="0,12,0,0" />
                                        <TextBlock Text="{Binding Description}" Foreground="{StaticResource SecondaryTextBrush}" TextWrapping="Wrap" Margin="0,6,0,16" />
                                        <Button Content="Activate" Background="{Binding Accent}" Foreground="White" Margin="0,4,0,0" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- Mods, analytics and offline support -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="28" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource GlassCard}" Padding="26">
                        <StackPanel>
                            <TextBlock Text="Featured mods" FontSize="20" FontWeight="SemiBold" />
                            <TextBlock Text="Keep essentials ready regardless of connectivity." Foreground="{StaticResource SecondaryTextBrush}" />
                            <ItemsControl ItemsSource="{Binding FeaturedMods}" Margin="0,18,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,14">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" />
                                                <TextBlock Text="Version {Binding Version}" Foreground="{StaticResource SecondaryTextBrush}" />
                                            </StackPanel>
                                            <Button Grid.Column="1"
                                                    Content="{Binding Status}"
                                                    Style="{StaticResource SecondaryButton}"
                                                    Padding="12,6"
                                                    Margin="16,0,0,0" />
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="2">
                        <Border Style="{StaticResource GlassCard}" Padding="26">
                            <StackPanel>
                                <TextBlock Text="Performance overview" FontSize="20" FontWeight="SemiBold" />
                                <TextBlock Text="A glance at how your last session behaved." Foreground="{StaticResource SecondaryTextBrush}" Margin="0,4,0,16" />
                                <TextBlock Text="Average FPS" />
                                <ProgressBar Value="86" Height="14" Foreground="{StaticResource AccentBrush}" Margin="0,6,0,12" />
                                <TextBlock Text="Ping stability" />
                                <ProgressBar Value="72" Height="14" Foreground="#FF64C8FF" Margin="0,6,0,12" />
                                <TextBlock Text="Shader ready" />
                                <ProgressBar Value="95" Height="14" Foreground="#FF6BCB77" Margin="0,6,0,18" />
                                <Button Content="Open analyzer" Style="{StaticResource AccentButton}" />
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource GlassCard}" Padding="26" Margin="0,18,0,0">
                            <StackPanel>
                                <DockPanel>
                                    <StackPanel DockPanel.Dock="Left">
                                        <TextBlock Text="Offline mode" FontSize="20" FontWeight="SemiBold" />
                                        <TextBlock Text="{Binding OfflineHeadline}" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,4,0,0" TextWrapping="Wrap" />
                                    </StackPanel>
                                    <Border Style="{StaticResource StatusPill}" DockPanel.Dock="Right" Margin="12,0,0,0">
                                        <TextBlock Text="{Binding OfflineProfileSummary}" FontWeight="SemiBold" />
                                    </Border>
                                </DockPanel>

                                <TextBlock Text="{Binding OfflineDescription}" TextWrapping="Wrap" Margin="0,12,0,20" />

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="220" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <Ellipse Width="14" Height="14" Fill="{StaticResource AccentBrush}" VerticalAlignment="Center" />
                                            <TextBlock Text="Persona setup" FontWeight="SemiBold" Margin="6,0,0,0" />
                                        </StackPanel>
                                        <TextBlock Text="Offline name" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,6" />
                                        <TextBox Text="{Binding OfflineUsername, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource OutlinedTextBox}" IsEnabled="{Binding IsOffline}" />
                                        <TextBlock Text="{Binding OfflineSkinStatus}" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,10,0,10" />
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Choose skin"
                                                    Command="{Binding BrowseSkinCommand}"
                                                    Style="{StaticResource AccentButton}"
                                                    Width="140"
                                                    IsEnabled="{Binding IsOffline}" />
                                            <Button Content="Reset"
                                                    Command="{Binding ClearSkinCommand}"
                                                    Style="{StaticResource SecondaryButton}"
                                                    Width="100"
                                                    IsEnabled="{Binding IsOffline}" Margin="10,0,0,0" />
                                        </StackPanel>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                            Background="#0FFFFFFF"
                                            BorderBrush="#2CFFFFFF"
                                            BorderThickness="1.2"
                                            CornerRadius="16"
                                            Padding="12"
                                            Margin="20,0,0,0">
                                        <Grid>
                                            <Rectangle RadiusX="14" RadiusY="14" Fill="#142A3F70" />
                                            <Image Source="{Binding OfflineSkinPreview}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Height="180">
                                                <Image.Style>
                                                    <Style TargetType="Image">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding OfflineSkinPreview}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Image.Style>
                                            </Image>
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <StackPanel.Style>
                                                    <Style TargetType="StackPanel">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding OfflineSkinPreview}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </StackPanel.Style>
                                                <TextBlock Text="No custom skin" FontWeight="SemiBold" Margin="0,0,0,4" />
                                                <TextBlock Text="Upload a PNG skin to personalize offline play." TextWrapping="Wrap" Width="160" TextAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}" />
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <StackPanel Margin="0,24,0,0">
                                    <TextBlock Text="{Binding LastSync, StringFormat=Last synced {0}}" FontWeight="SemiBold" />
                                    <ItemsControl ItemsSource="{Binding OfflineCapabilities}" Margin="0,12,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource InfoPill}">
                                                    <TextBlock Text="{Binding}" />
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <Button Content="Sync when online"
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="0,24,0,0"
                                        IsEnabled="{Binding CanCheckUpdates}"
                                        ToolTipService.ShowOnDisabled="True">
                                    <Button.ToolTip>
                                        <TextBlock Text="We'll resume syncing once you're back online." />
                                    </Button.ToolTip>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
