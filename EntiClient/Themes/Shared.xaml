<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Thickness x:Key="CardCornerRadius">18</Thickness>
    <CornerRadius x:Key="PanelCornerRadius">18</CornerRadius>

    <DropShadowEffect x:Key="NavigationShadow" Color="#40000000" BlurRadius="28" ShadowDepth="3" x:Shared="False" />

    <LinearGradientBrush x:Key="NavigationBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#66202936" Offset="0" />
        <GradientStop Color="#88182230" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackdropGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0D0F17" Offset="0" />
        <GradientStop Color="#101a2a" Offset="0.4" />
        <GradientStop Color="#1A102A" Offset="1" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="BackdropGlow" Center="0.2,0.1" GradientOrigin="0.2,0.1" RadiusX="0.85" RadiusY="0.85">
        <GradientStop Color="#403F7BFF" Offset="0" />
        <GradientStop Color="#003B62FF" Offset="0.5" />
        <GradientStop Color="#00000000" Offset="1" />
    </RadialGradientBrush>

    <LinearGradientBrush x:Key="AuroraRibbonBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#8044F3E3" Offset="0" />
        <GradientStop Color="#403C61FF" Offset="0.45" />
        <GradientStop Color="#803D23B7" Offset="1" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="AuroraBubbleBrush" RadiusX="0.65" RadiusY="0.65" Center="0.5,0.5" GradientOrigin="0.4,0.3">
        <GradientStop Color="#40FFFFFF" Offset="0" />
        <GradientStop Color="#30A6E1FF" Offset="0.55" />
        <GradientStop Color="#00000000" Offset="1" />
    </RadialGradientBrush>

    <LinearGradientBrush x:Key="LiquidBorderBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#55FFFFFF" Offset="0" />
        <GradientStop Color="#18FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LiquidFillOverlay" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#40FFFFFF" Offset="0" />
        <GradientStop Color="#12FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <VisualBrush x:Key="GlassPanelBrush">
        <VisualBrush.Visual>
            <Grid>
                <Rectangle Fill="{DynamicResource CardBackgroundBrush}" />
                <Rectangle Fill="{StaticResource LiquidFillOverlay}" />
            </Grid>
        </VisualBrush.Visual>
    </VisualBrush>

    <LinearGradientBrush x:Key="InputGlassBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#26FFFFFF" Offset="0" />
        <GradientStop Color="#12FFFFFF" Offset="1" />
    </LinearGradientBrush>

    <Style x:Key="InfoPill" TargetType="Border">
        <Setter Property="Background" Value="#24FFFFFF" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Margin" Value="0,6,6,0" />
        <Setter Property="BorderBrush" Value="{StaticResource LiquidBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Key="GlassCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource GlassPanelBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource PanelCornerRadius}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="BorderThickness" Value="1.4" />
        <Setter Property="BorderBrush" Value="{StaticResource LiquidBorderBrush}" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#66000000" BlurRadius="22" ShadowDepth="2" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#40000000" BlurRadius="12" ShadowDepth="1" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource AccentBrushStrong}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource AccentButton}">
        <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
        <Setter Property="Background" Value="{DynamicResource SecondaryButtonBrush}" />
    </Style>

    <Style x:Key="PillToggleButton" TargetType="ToggleButton">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="14,8" />
        <Setter Property="Background" Value="{DynamicResource SecondaryButtonBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="ToggleBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="20"
                            Padding="6"
                            SnapsToDevicePixels="True">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ContentPresenter Margin="4,0" />
                            <Ellipse x:Name="StatusDot" Width="8" Height="8" Fill="#4CFFFFFF" Margin="6,0,0,0" />
                        </StackPanel>
                    </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleBorder" Property="Background" Value="{DynamicResource AccentBrush}" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="StatusDot" Property="Fill" Value="#FFFFFFFF" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleBorder" Property="Effect">
                                    <Setter.Value>
                                    <DropShadowEffect Color="#40000000" BlurRadius="16" ShadowDepth="1" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <LinearGradientBrush x:Key="HeroBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#AA4D6CFF" Offset="0" />
        <GradientStop Color="#CC3BC0FF" Offset="0.35" />
        <GradientStop Color="#AA3DE6C0" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>
