<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Thickness x:Key="CardCornerRadius">18</Thickness>
    <CornerRadius x:Key="PanelCornerRadius">18</CornerRadius>

    <DropShadowEffect x:Key="NavigationShadow" Color="#40000000" BlurRadius="28" ShadowDepth="3" x:Shared="False" />

    <LinearGradientBrush x:Key="NavigationBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#55212739" Offset="0" />
        <GradientStop Color="#77131A25" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackdropGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#181B24" Offset="0" />
        <GradientStop Color="#10131B" Offset="1" />
    </LinearGradientBrush>

    <RadialGradientBrush x:Key="BackdropGlow" Center="0.2,0.1" GradientOrigin="0.2,0.1" RadiusX="0.8" RadiusY="0.8">
        <GradientStop Color="#322F7BFF" Offset="0" />
        <GradientStop Color="#00000000" Offset="1" />
    </RadialGradientBrush>

    <Style x:Key="InfoPill" TargetType="Border">
        <Setter Property="Background" Value="#1FFFFFFF" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="Margin" Value="0,6,6,0" />
    </Style>

    <Style x:Key="GlassCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource PanelCornerRadius}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#80000000" BlurRadius="18" ShadowDepth="2" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#40000000" BlurRadius="12" ShadowDepth="1" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentBrushStrong}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource AccentButton}">
        <Setter Property="Foreground" Value="{StaticResource AccentBrush}" />
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBrush}" />
    </Style>

    <Style x:Key="PillToggleButton" TargetType="ToggleButton">
        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="14,8" />
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="ToggleBorder"
                            Background="{TemplateBinding Background}"
                            CornerRadius="20"
                            Padding="6"
                            SnapsToDevicePixels="True">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ContentPresenter Margin="4,0" />
                            <Ellipse x:Name="StatusDot" Width="8" Height="8" Fill="#4CFFFFFF" Margin="6,0,0,0" />
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="ToggleBorder" Property="Background" Value="{StaticResource AccentBrush}" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter TargetName="StatusDot" Property="Fill" Value="#FFFFFFFF" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ToggleBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="#40000000" BlurRadius="16" ShadowDepth="1" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <LinearGradientBrush x:Key="HeroBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF6C5DD3" Offset="0" />
        <GradientStop Color="#FF4CC9F0" Offset="0.45" />
        <GradientStop Color="#FF94E8B4" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>
